<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/standard_padding_sm"
    android:paddingRight="@dimen/standard_padding_sm"
    android:paddingBottom="@dimen/padding_xs"
    android:layout_height="wrap_content">
   <android.support.v7.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:clickable="true"
       android:foreground="?android:attr/selectableItemBackground"
       card_view:cardCornerRadius="2dp"
       card_view:cardElevation="2dp"
       android:layout_marginBottom="1dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/standard_padding_sm"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/news_item_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/TextAppearance.AppCompat.Medium"
               android:maxLines="1"
               android:ellipsize="end"
               tools:text="News article"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="6dp"
               style="@style/TextAppearance.AppCompat.Body1"
               android:layout_marginBottom="6dp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:ellipsize="end"
                   android:text="Bwighane Clive Mwalwanda"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:gravity="end|right"
                   android:layout_height="wrap_content"
                   android:text="2hrs ago"
                   />
           </LinearLayout>
           <TextView
               android:id="@+id/news_item_description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/TextAppearance.AppCompat.Body1"
               android:maxLines="5"
               android:ellipsize="end"
               tools:text="@string/sample_description" />
           <TextView
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:gravity="end|right"
               android:layout_height="wrap_content"
               android:layout_marginTop="6dp"
               android:textColor="@color/colorPrimary"
               android:text="read more..."
               />
       </LinearLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>